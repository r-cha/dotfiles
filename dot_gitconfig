[init]
	defaultBranch = main
[core]
	editor = nvim
	excludesFile = ~/.gitignore
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	verbose = true
[diff]
	algorithm = histogram
[push]
	autoSetupRemote = true
[branch]
	sort = committerdate
[merge]
	conflictstyle = zdiff3
[rerere]
	enabled = true
[pull]
	rebase = true
